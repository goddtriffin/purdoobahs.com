{{template "base" .}}

{{define "main"}}
<main class="traditions-page">
    <p>Click on any tradition to read more!</p>

    <div class="grid">
        {{ range $i, $p := .Traditions }}
            <div class="grid-card" data-name="{{- .Name -}}" >
                <div class="grid-card-header">
                    <h2><a href="/tradition/{{- .ID -}}">{{- .Name -}}</a></h2>
                </div>

                <a href="/tradition/{{- .ID -}}">
                    <picture>
                        <img class="tradition" src="{{- .Metadata.Image.File -}}" alt="{{- .Metadata.Image.Alt -}}" loading="lazy">
                    </picture>
                </a>
            </div>
        {{ end }}
    </div>
</main>
{{end}}
